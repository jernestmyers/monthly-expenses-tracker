  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.3.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.1",
    "globals": "^15.3.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "prettier": "3.2.5",
    "typescript-eslint": "^7.10.0"
  }
